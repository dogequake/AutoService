<Page x:Class="SumbitFor16.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SumbitFor16.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <UniformGrid>
                <TextBlock Style="{StaticResource BlockCommon}" Text="Логин: " ></TextBlock>
                <TextBox Name="TBoxLogin">admin1</TextBox>
            </UniformGrid>
            <UniformGrid >
                <TextBlock Style="{StaticResource BlockCommon}" Text="Пароль: "></TextBlock>
                <PasswordBox Name="PBoxPassword" ></PasswordBox>
            </UniformGrid>
            <Button Name="BtnLogin" Click="BtnLoginClick" Content="Войти" HorizontalAlignment="Right"></Button>
            
            <Button Name="BtnReg" Click="BtnRegClick" Content="Зарегистрироваться" HorizontalAlignment="Right" Margin="0 15 0 0" Width="225"></Button>
        </StackPanel>
    </Grid>
</Page>
